/* components/order-bar/index.wxss */
.container {
  width: 100%;
  height:100rpx;
  background-color: #f7f7f7;
  border-radius:2px;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
}
.text {
  padding: 0 20rpx;
  width: 70vw;
}
.order{
  width: 30vw;
  height: 100rpx;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}
.desc {
  display: flex;
  width: 100vw;
  padding: 20rpx;
  position: absolute;
  flex-direction: column;
  justify-content: center;
  bottom: 0;
  z-index: 99;
  background: #fff;
}
.show {
  display: flex;
}
.hidden {
  display: none;
}